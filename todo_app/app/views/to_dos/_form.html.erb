<%= form_for(@to_do) do |f| %>
        <div class="field">
                <%= f.label :task_name %><%= f.text_field :task_name %>
        </div>

        <div class="field">
                <%= f.label :complete %><%= f.check_box :complete %>
        </div>

        <div class="field">
                <%= f.label :description %><%= f.text_field :description %>
        </div>

        <div class="field">
                <%= f.label :due_date %><%= f.text_field :due_date %>
        </div>


        <div class="actions">
                <%= f.submit %>
        </div>

<% end %>