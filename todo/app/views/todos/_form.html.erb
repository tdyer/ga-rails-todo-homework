<%= form_for(@todo) do |f| %>
  <div class="field">
    <%= f.label :description %><%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :complete %><%= f.check_box :complete %>
  </div>
  <div class="field">
    <%= f.label :date_due %><%= f.check_box :date_due %>
  </div>
  <div class="actions"><%= f.submit %></div>

  <% end %>