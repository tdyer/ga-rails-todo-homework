<%= form_for(@todo) do |f| %>
	<div class="field">
		<%= f.label :name %><%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :description %><%= f.text_field :description %>
	</div>
	<div class="field">
		<%= f.label :deadline %><%= f.date_select :deadline %>
	</div>
	<div class="field">
	<br />
	<%= f.submit %>
	</div>
<% end %>
